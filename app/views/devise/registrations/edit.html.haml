%h2
  Editar Conta
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email, "E-mail"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Aguardando confirmação para: #{resource.unconfirmed_email}
  .field
    = f.label :password, "Senha"
    %i (deixe em branco se não pretende mudar)
    %br/
    = f.password_field :password, autocomplete: "new-password"
    - if @minimum_password_length
      %br/
      %em
        mínimo de
        = @minimum_password_length
        caracteres
  .field
    = f.label :password_confirmation, "Confirme a senha"
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .field
    = f.label :current_password, "Senha atual"
    %br/
    = f.password_field :current_password, autocomplete: "current-password"
  .actions
    = f.submit "Atualizar"
%h3 Cancelar minha conta
%p
  Está insatisfeito? #{button_to "Cancelar conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
= link_to "voltar", :back
