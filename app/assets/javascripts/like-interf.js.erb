function atualiza(interf, data) {
    interf.pontos.text(data.pontos + (Math.abs(data.pontos) > 1 ? ' pontos' : ' ponto'));
    interf.meu_voto.text(data.voto == +1 ? 'Gostei' : (data.voto == -1 ? 'NÃ£o gostei' : ''));
    interf.up.html('<img src="' + (data.voto == +1 ? '<%=image_url("/assets/up-ativo.png")%>' : '<%=image_url("/assets/up-inativo.png")%>') + '">');
    interf.down.html('<img src="' + (data.voto == -1 ? '<%=image_url("/assets/down-ativo.png")%>' : '<%=image_url("/assets/down-inativo.png")%>') + '">');
}

function cliqueLike(url, id, interf) {
    $.post(
        url, 
        {id: id},
        function(data) {
            atualiza(interf, data);
        }
    );
}
